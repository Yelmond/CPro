{
	"version": 6,
	"cmakeMinimumRequired": {
		"major": 3,
		"minor": 27,
		"patch": 0
	},
	"configurePresets": [
		{
			"name": "base",
			"hidden": true,
			"vendor": {
				"microsoft.com/VisualStudioSettings/CMake/1.0": {
					"hostOS": ["Windows", "Linux", "macOS"],
					"hostArch": ["x64", "arm64"]
				}
			},
			"toolchainFile": ".local/vcpkg/scripts/buildsystems/vcpkg.cmake",
			"binaryDir": "${sourceDir}/.work/${presetName}/project",
			"installDir": "${sourceDir}/.work/${presetName}/install",
			"cacheVariables": {
				"CMAKE_MODULE_PATH": "${sourceDir}/cmake",
				"CMAKE_EXPORT_COMPILE_COMMANDS": "YES"
			},
			"environment": {
				"PATH": "${sourceDir}/.local/cmake/bin:$penv{PATH}"
			}
		},

		{
			"name": "compiler-cl",
			"hidden": true,
			"cacheVariables": {
				"CMAKE_C_COMPILER": "cl",
				"CMAKE_CXX_COMPILER": "cl"
			},
			"condition": {
				"type": "equals",
				"lhs": "${hostSystemName}",
				"rhs": "Windows"
			}
		},
		{
			"name": "compiler-clang",
			"hidden": true,
			"cacheVariables": {
				"CMAKE_C_COMPILER": "clang",
				"CMAKE_CXX_COMPILER": "clang++"
			}
		},

		{
			"name": "ninja-base",
			"hidden": true,
			"generator": "Ninja Multi-Config",
			"cacheVariables": {
				"CMAKE_MAKE_PROGRAM": "${sourceDir}/.local/ninja/ninja"
			}
		},
		{
			"name": "ninja",
			"inherits": [ "base", "ninja-base", "compiler-clang" ],
			"hidden": false
		},

		{
			"name": "vs-base",
			"hidden": true,
			"generator": "Visual Studio 17 2022",
			"condition": {
				"type": "equals",
				"lhs": "${hostSystemName}",
				"rhs": "Windows"
			}
		},
		{
			"name": "vs",
			"inherits": [ "base", "vs-base", "compiler-cl" ],
			"hidden": false
		}
	],
	"buildPresets": [
		{
			"name": "ninja",
			"configurePreset": "ninja",
			"configuration": "Debug",
			"targets": [ "all" ]
		},
		{
			"name": "ninja-release",
			"inherits": "ninja",
			"configuration": "Release"
		},
		{
			"name": "vs",
			"configurePreset": "vs",
			"configuration": "Debug",
			"targets": [ "ALL_BUILD" ]
		},
		{
			"name": "vs-release",
			"inherits": "vs",
			"configuration": "Release"
		}
	],
	"testPresets": [
		{
			"name": "base-test",
			"hidden": true,
			"output": { "outputOnFailure": true },
			"execution": { "noTestsAction": "error", "stopOnFailure": true }
		},
		{
			"name": "ninja",
			"inherits": "base-test",
			"configurePreset": "ninja",
			"configuration": "Debug"
		},
		{
			"name": "ninja-release",
			"inherits": "ninja",
			"configuration": "Release"
		},
		{
			"name": "vs",
			"inherits": "base-test",
			"configurePreset": "vs",
			"configuration": "Debug"
		},
		{
			"name": "vs-release",
			"inherits": "vs",
			"configuration": "Release"
		}
	]
}
