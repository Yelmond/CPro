{
	"version": 5,
	"cmakeMinimumRequired": {
		"major": 3,
		"minor": 25,
		"patch": 0
	},
	"configurePresets": [
		{
			"name": "base",
			"hidden": true,
			"toolchainFile": ".local/vcpkg/scripts/buildsystems/vcpkg.cmake",
			"binaryDir": "${sourceDir}/.work/${presetName}/project",
			"installDir": "${sourceDir}/.work/${presetName}/install",
			"cacheVariables": {
				"CMAKE_EXPORT_COMPILE_COMMANDS": "YES"
			},
			"environment": {
				"PATH": "${sourceDir}/.local/cmake/bin:$penv{PATH}"
			}
		},
		{
			"name": "ninja",
			"inherits": "base",
			"hidden": false,
			"generator": "Ninja Multi-Config",
			"cacheVariables": {
				"CMAKE_MAKE_PROGRAM": "${sourceDir}/.local/ninja/ninja"
			}
		},
		{
			"name": "vs",
			"inherits": "base",
			"hidden": false,
			"generator": "Visual Studio 17 2022",
			"architecture": "x64",
			"toolset": "host=x64"
		}
	],
	"buildPresets": [
		{
			"name": "ninja",
			"configurePreset": "ninja",
			"configuration": "Debug",
			"targets": [ "all" ]
		},
		{
			"name": "ninja-release",
			"inherits": "ninja",
			"configuration": "Release"
		},
		{
			"name": "vs",
			"configurePreset": "vs",
			"configuration": "Debug",
			"targets": [ "ALL_BUILD" ]
		},
		{
			"name": "vs-release",
			"inherits": "vs",
			"configuration": "Release"
		}
	]
}
